  OPERATIONAL
  TAX
  COMMISSION
  OTHER
}

enum ExpenseStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}

model Expense {
  id              String        @id @default(uuid())
  clinicId        String
  
  description     String
  amountCents     Int
  dueDate         DateTime
  paidAt          DateTime?
  
  status          ExpenseStatus @default(PENDING)
  type            ExpenseType   @default(OPERATIONAL)
  
  // Optional Links
  purchaseOrderId String?
  purchaseOrder   PurchaseOrder? @relation(fields: [purchaseOrderId], references: [id])
  
